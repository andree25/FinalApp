<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="16dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_weight="1"
        app:cardBackgroundColor="@color/colorAccent"
        app:cardCornerRadius="20dp"
        app:cardElevation="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/pet_image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/pet_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/pet_image"
                android:paddingTop="8dp"
                android:paddingStart="10dp"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:ignore="RtlSymmetry" />

            <TextView
                android:id="@+id/pet_age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/pet_type"
                android:layout_toEndOf="@+id/pet_image"
                android:textColor="@color/white"
                android:paddingTop="4dp"
                android:paddingStart="10dp"
                android:textSize="14sp"
                tools:ignore="RtlSymmetry" />

            <TextView
                android:id="@+id/pet_gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/pet_age"
                android:paddingTop="4dp"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:paddingStart="10dp"
                android:layout_toEndOf="@+id/pet_image"
                tools:ignore="RtlSymmetry" />

            <TextView
                android:id="@+id/pet_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/pet_image"
                android:layout_below="@+id/pet_gender"
                android:textColor="@color/white"
                android:paddingTop="4dp"
                android:paddingStart="10dp"
                android:textSize="14sp"
                tools:ignore="RtlSymmetry" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>